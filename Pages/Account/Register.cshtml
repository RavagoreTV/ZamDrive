@page
@model ZamkDb.Pages.Account.RegisterModel
@{
}

<html>
<body style="background-color: rgba(244, 217, 107, 255);">
</body>
</html>

<h1>Registration of the user</h1>
<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div asp-validation-summary="  ModelOnly  " class="text-danger">
			</div>
			<div class="form-group">
				<label asp-for="@Model.Registration.Name" class="control-label"></label>
				<input asp-for="@Model.Registration.Name" class="form-control" />
				<span asp-validation-for="@Model.Registration.Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="@Model.Registration.Address" class="control-label"></label>
				<input asp-for="@Model.Registration.Address" class="form-control" />
				<span asp-validation-for="@Model.Registration.Address" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="@Model.Registration.Email" class="control-label"></label>
				<input asp-for="@Model.Registration.Email" class="form-control" />
				<span asp-validation-for="@Model.Registration.Email" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="@Model.Registration.Password" class="control-label"></label>
				<input asp-for="@Model.Registration.Password" class="form-control" />
				<span asp-validation-for="@Model.Registration.Password" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="@Model.Registration.ConfirmPassword" class="control-label"></label>
				<input asp-for="@Model.Registration.ConfirmPassword" class="form-control" />
				<span asp-validation-for="@Model.Registration.ConfirmPassword" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="@Model.Registration.canBeDriver" class="control-label"></label>
				<input asp-for="@Model.Registration.canBeDriver" class="form-control" />
				<span asp-validation-for="@Model.Registration.canBeDriver" class="text-danger"></span>
			</div>
			
			
            
            <div class="form-group">
				<input type="submit" value="Register" class="btn btn-dark" />
			</div>
		</form>
	</div>
</div>