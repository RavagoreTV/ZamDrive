        <input asp-for="@Model.Course.AvailableSeats" class="form-control" readonly="readonly" />
        <span asp-validation-for="@Model.Course.AvailableSeats" class="text-danger"></span>
    </div>

    <div>

        <label asp-for="@Model.Booking.ChosenPickUpPoint" class="control-label"></label>
        <select asp-for="@Model.Booking.ChosenPickUpPoint" class="form-control">
            <option>@Model.Course.PickUpPoint1</option>
            <option>@Model.Course.PickUpPoint2</option>
            <option>@Model.Course.PickUpPoint3</option>
